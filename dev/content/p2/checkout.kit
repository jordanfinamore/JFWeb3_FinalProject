<section id="checkout">
   <div class="check"  id="c1">
    <h2>Payment information</h2>
    <form>
        <input type="text" placeholder="Card number" pattern="[0-9]{4}" maxlength="16">
        <input type="month" placeholder="Expiration date">
        <input type="text" placeholder="Security code" pattern="[0-9]{3}" maxlength="3">
        <a class="paypal" href="none">Pay with <img src="media/paypal.png" alt="PayPal"></a>
    </form>
   </div>
   <div class="check"  id="c2">
    <h2>Contact information</h2>
    <form>
        <input type="text" placeholder="John">
        <input type="text" placeholder="Smith">
        <input type="text" placeholder="Email address">
    </form>
   </div>
   <div class="check"  id="c3">
    <h2>Shipping address</h2>
    <form>
        <input type="text" placeholder="Street address">
        <input type="text" placeholder="Apartment (optional)">
        <input type="text" placeholder="City of residence">
        <input type="text" placeholder="State/province">
        <input type="text" placeholder="ZIP">
        <input type="text" placeholder="Country">
    </form>
   </div>
   <div class="check"  id="c4">
    <h2>Billing address</h2>
    <form>
        <input type="text" placeholder="Street address">
        <input type="text" placeholder="Apartment (optional)">
        <input type="text" placeholder="City of residence">
        <input type="text" placeholder="State/province">
        <input type="text" placeholder="ZIP">
        <input type="text" placeholder="Country">
    </form>
   </div>
   <div id="c5">
    <table>
        <tr>
            <td>Shark® Stratos™ Upright Vacuum</td>
            <td>$429.00</td>
        </tr>
        <tr>
            <td>One-day shipping</td>
            <td>$9.99</td>
        </tr>
        <tr>
            <td>Tax</td>
            <td>$25.74</td>
        </tr>
        <tr>
            <td>Total</td>
            <td>$464.73</td>
        </tr>
    </table>
    <a class="button" href="p3.html">Place order</a>
   </div>
</section>